<% provide(:title, 'Home') %>

<div id="main_panel">
  <div id="table_panel">

    <p id="notice"><%= notice %></p>
    
    <table>
      <thead>
        <tr>
          <th>Title</th>
          <th>Url</th>
          <th colspan="3"></th>
        </tr>
      </thead>
    
      <tbody>
        <% @book_marks.each do |book_mark| %>
          <tr>
            <td><%= book_mark.title %></td>
            <td><%= link_to book_mark.url,  book_mark.url, :target=>["_blank"] %></td>
            <td><%= link_to 'Show', book_mark %></td>
            <td><%= link_to 'Edit', edit_book_mark_path(book_mark) %></td>
            <td><%= link_to 'Destroy', book_mark, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    
    <br>
  
    <%= link_to 'New Book Mark', new_book_mark_path %>

  </div>
</div>